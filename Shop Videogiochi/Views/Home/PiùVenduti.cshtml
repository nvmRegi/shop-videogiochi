

<div class="container">
    <div class="row">
        <div class="col">
            <h1 class="text-white">I Più Venduti</h1>
            <p class="text-white">Tutti i giochi</p>
        </div>
    </div>
    <div class="row">
        <div class="col d-none" id="no-videogiochi">
            <h1 class="text-white text-center">Non Ci sono Videogiochi disponibili</h1>
        </div>
        <div class="col-12">
            <!--Inizio Card-->
            <div class="card">
              <div class="card-header">
                  <div id="Immagine_videogioco"></div>
                <!--qui andrà l'immagine della card se la mettiamo-->
              </div>
              <div class="card-body">
                <blockquote class="blockquote mb-0">
                  <!--qui andrà il testo della card-->
                  <footer class="blockquote-footer"><div id="Descrizione_Videogioco"></div><cite title="Source Title"><!--qui mettereno il prezzo del videogioco--></cite></footer>
                </blockquote>
              </div>
            </div>
            <!--Fine Card-->
        </div>
    </div>
</div>



@section Scripts {
    <script type="text/javascript">
            
        caricaPiùVenduti();
        //MiPiaceAiVideogiochi();

        function caricaPiùVenduti()
        {
            //document.getElementById("videogiochi_div").innerHTML= "";
            axios.get('api/PiùVenduti/Get')
            .then
            (result =>
                {
                    console.log("Ha ricevuto i videogiochi non ho capito bene come ma va... di nuovo!");

                    result.data.forEach (videogioco => 
                        {   
                            if(result.data.length == 0){
                                //document.getElementById("wait_videogioco").classList.add("d-none");
                                document.getElementById("no-videogiochi").classList.remove("d-none");
                            } else{
                                //document.getElementById("wait_videogioco").classList.add("d-none");
                                //document.getElementById("videogiochi_div").classList.remove("d-none");

                                var idVideogame = videogioco.id;
                                var url = "/Home/Dettagli/" + videogioco.id;

                                document.getElementById("Immagine_videogioco").innerHTML +=
                                    `
                                    <img src="${url}" class="card-img-top" alt="${videogioco.nome}" />
                                    `

                                document.getElementById("Descrizione_Videogioco").innerHTML +=
                                    `
                                    <span class="text-white">${videogioco.descrizione}</span>
                                    <span > </span>
                                    <span class="text-white">€ ${videogioco.prezzo}</span>
                                    `
                            }
                    }
                }
            )
        }
    
            ).catch
            (
                (error) =>
                {
                console.log("C'è stato un errore: " + error);
            })
            </script>
        }






