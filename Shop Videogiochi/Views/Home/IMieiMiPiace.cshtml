<!-- container della pagina -->
<div class="container-fluid shadow p-3 mb-3 rounded py-5 text-light">

    <!-- Dropdown categorie -->
    <div class="dropdown mb-4">
        <a class="btn dropdown-toggle text-light" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
            Categorie
        </a>
                                
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink" id="categoria">
            <!-- qui verranno mostrate le categoria nel dropdown-->
        </ul>
    </div>

    <!-- Caricamento della pagina -->
    <div id="wait_videogioco" class="row justify-content-center my-5">
        <div class="col-2 justify-content-center">        
            <div class="loader">
                <div class="ball d-inline-block"></div> <div class="ball d-inline-block"></div> <div class="ball d-inline-block"></div>
                <br/>
                <span>Loading...</span>
            </div>
        </div>
    </div>

    <!-- Div nel caso non ci fossero videogiochi -->
    <div id="no-videogiochi" class="row text-center d-none">
        <div class="col-12">
            <h3>Non è disponibile nessun videogioco</h3>
        </div>
    </div>

    <!-- Homepage negozio -->
    <div id="videogiochi_div" class="row mt-3 justify-content-center text-center mx-4 d-none">
            <!-- qui verranno mostrati i videogiochi -->
    </div>

</div>



@section Scripts {
    <script type="text/javascript">
        
        // ------ barra di ricerca ------
        document.getElementById('search_input').addEventListener('keyup', cercaVideogioco);

        cercaVideogioco();

        function cercaVideogioco(){
            var inputTesto = document.getElementById('search_input').value;
            caricaVideogiochi(inputTesto);
        }
        // ------ fine barra di ricerca ------

        // ------ funzione carica i videogiochi ------
        function caricaVideogiochi(parametroSearch)
        {
            document.getElementById("videogiochi_div").innerHTML = "";

            axios.get('/api/VideogiochiMiPiace/Get', {
                params: {
                    search: parametroSearch
                }
            })
            .then
            (result =>
                {
                    result.data.forEach (videogioco => 
                        {   
                            if(result.data.length == 0){
                                document.getElementById("wait_videogioco").classList.add("d-none");
                                document.getElementById("no-videogiochi").classList.remove("d-none");
                            } else{
                                document.getElementById("wait_videogioco").classList.add("d-none");
                                document.getElementById("videogiochi_div").classList.remove("d-none");

                                var url = "/Home/Dettagli/" + videogioco.id;
                                
                                var urlMiPiace = "/api/VideogiochiMiPiace/Post" + videogioco.id;

                                document.getElementById("videogiochi_div").innerHTML +=
                                    `                                       
                                        <div class="col-12 col-md-6 col-lg-4 d-flex justify-content-center">
                                            <div class="card p-3 mb-5 pt-0 px-0 text-center" style="width: 18rem; background-image: linear-gradient(to right, #d1edf7, white)">
                                                <img src="${videogioco.foto}" class="card-img-top img-fluid" alt="${videogioco.nome}" />
                                                <div class="card-body pt-2 mt-0">
                                                    <h5 class="card-title text-dark">${videogioco.nome}</h5>
                                                    <a href="${url}" class="btn btn-danger">Acquista</a>
                                                    <button onclick="prendiUnVideogioco(${videogioco.id})" class="buttonLike">Mi piace</button>
                                                </div>
                                            </div>                                                  
                                        </div>                                       
                                    `
                            }
                                                    //roba sperimentale per i bottoni belli
                                                    //<span id="Piace${videogioco.Id}">Mi piace</span>
                                                    //<span id="NumeroPiace${videogioco.Id}">${videogioco.miPiace}</span>
                        }
                    )
                }
            ).catch((error) =>{
                console.log("C'è stato un errore: " + error);
            })
        }
        
        caricaDropdown();

        function caricaDropdown(){
            document.getElementById('categoria').innerHTML = `<li class="dropdown-item" onclick="caricaVideogiochi()">Tutte</li>`;

            axios.get('/api/Categoria/Get')
            .then((result) =>{

                result.data.forEach(categoria =>{
                    document.getElementById('categoria').innerHTML +=
                    `
                    <li class="dropdown-item" onclick="cercaPerCategoria(${categoria.id})">${categoria.tema}</li>
                    `
                })
            }).catch(error =>{
                console.log("C'è stato un errore: " + error);
            })
        }


        function cercaPerCategoria(id){

            //document.getElementById("videogioco_div").innerHTML = "";

            axios.get('/api/Videogiochi/Get',{
                params:{
                    idCategoria: id
                }
            }).then((result) =>{

                if(result.data.length == 0){
                    document.getElementById("videogiochi_div").classList.add("d-none");
                    document.getElementById("no-videogiochi").classList.remove("d-none");
                } else{
                    document.getElementById("no-videogiochi").classList.add("d-none");
                    document.getElementById("videogiochi_div").classList.remove("d-none");
                    document.getElementById("videogiochi_div").innerHTML = "";

                    result.data.forEach(videogioco =>{

                    var idVideogame = videogioco.id;
                    var url = "/Home/Dettagli/" + videogioco.id;

                    document.getElementById("videogiochi_div").innerHTML +=
                        `                                       
                            <div class="col-12 col-lg-4 col-md-6">
                                <div class="card p-3 mb-5 pt-0 px-0 text-center">
                                    <img src="${videogioco.foto}" class="card-img-top img-fluid" alt="${videogioco.nome}" />
                                    <div class="card-body pt-2 mt-0">
                                        <h5 class="card-title text-dark">${videogioco.nome}</h5>
                                        <a href="${url}" class="btn btn-danger">Dettagli</a>
                                        <button href="${url}" class="buttonLike">Like</button>
                                    </div>
                                </div>                                                  
                            </div>                                         
                        `
                    })}

            }).catch(error =>{
                console.log("C'è stato un errore: " + error);
            })
        }

        function prendiUnVideogioco(idDaPrendere){

            axios.get('/api/Videogiochi/Get',{
                params: {
                    idVideogioco: idDaPrendere
                }
            }).then((result) =>{

                console.log("Entrato Get Un videogioco");

                eseguiPostLike(result.data[0].id);

            }).catch((error) =>{
                console.log("C'è stato un errore: " + error);
            })
        }

        function eseguiPostLike(videogiocoCheCiPiace) {

            axios.post('/api/VideogiochiMiPiace/Post', {
                Id : videogiocoCheCiPiace
            }).then(result =>{
                console.log("Entrato nel post");

            }).catch(error => {
                    console.log("C'è stato un errore: " + error);
                })
        }


    </script>
}