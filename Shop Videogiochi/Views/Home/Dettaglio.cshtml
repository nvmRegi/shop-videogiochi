@model Videogioco

<div class="container">
    <div class="row mt-5">
        <div class="col-6 mx-auto">
            <div class="card box-shadow bg-body mt-5 border-0">
                <img src="@Model.Foto" class="card-img-top h-100" alt="@Model.Nome" class="card-img-top">
            </div>
        </div>
        <div class="col-6 mx-auto my-auto">
            <h1 class="text-white text-center my-3 py-2">@Model.Nome</h1>
            <div class="row mt-3">
                <div class="col-12 mx-auto my-2">
                    <h3 class="text-white">Descrizione:</h3>
                    <p class="text-white my-2 py-3">@Model.Descrizione</p>
                </div>
            </div>
            <p class="text-white border rounded text-center my-3 py-2">Prezzo: @Model.Prezzo €</p>
            <form method="post" action="@Url.Action("Acquista","Home")">
                <div class="form-group text-white my-1">
                    <label for="Quantità">Quantità: </label>
                    <input asp-form="Quantità" class="d-block w-100" type="number" id="Quantità">
                </div>
            <div class="text-center">
                <button type="submit" class="btn btn-success my-3">Acquista</button>
            </div>
            </form>
         </div>
    </div>
</div>