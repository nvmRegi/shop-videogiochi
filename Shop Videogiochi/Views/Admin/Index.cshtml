@*
    Vista amministratore
*@


@model List<Videogioco>

<div class="container" style="padding-top: 65px">

    <table class="table align-middle mt-5" style="color: #ecf9fc">
        <thead>
            <tr>
                <th scope="col">Titolo</th>
                <th scope="col">Categoria</th>
                <th scope="col">Descrizione</th>
                <th scope="col">Prezzo</th>
                <th scope="col">Disponibilità</th>
                <th scope="col"><button class="steam-button glass" href="@Url.Action("Crea", "Admin")">Aggiungi Videogioco</button></th>
            </tr>
        </thead>
        <tbody>

           @* <!--------------------------------------------------MOCKUP------------------------------------------->
            <tr>
                <td class="align-middle">Nome</td>
                <th class="align-middle">Categoria</th>
                <td class="align-middle">Descrizione</td>
                <td class="align-middle">Prezzo</td>
                <td class="align-middle">Disponibilità</td>
                <td class="align-middle">
                    <a class="btn btn-sm" href="@Url.Action("Dettagli", "Admin", new{id = 0})">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M15 12c0 1.654-1.346 3-3 3s-3-1.346-3-3 1.346-3 3-3 3 1.346 3 3zm9-.449s-4.252 8.449-11.985 8.449c-7.18 0-12.015-8.449-12.015-8.449s4.446-7.551 12.015-7.551c7.694 0 11.985 7.551 11.985 7.551zm-7 .449c0-2.757-2.243-5-5-5s-5 2.243-5 5 2.243 5 5 5 5-2.243 5-5z"/></svg></a>
                    <br>
                    <a class="btn btn-sm" href="@Url.Action("Aggiorna", "Admin", new{id = 0})">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-activity"><polygon points="14 2 18 6 7 17 3 17 3 13 14 2"></polygon><line x1="3" y1="22" x2="21" y2="22"></line></svg>
                    </a>
                    <form action="@Url.Action("Elimina", "Admin", new{id = 0})" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-activity"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>
                        </button>
                    </form>
                </td>
            </tr>
            <!--------------------------------------------FINE-MOCKUP------------------------------------------->*@


        @foreach(Videogioco videogioco in Model)
        {
            <div class="righe-admin">
                <tr>
                    <th class="align-middle">@videogioco.Nome</th>
                    <td class="align-middle">@videogioco.Categoria.Tema</td>
                    <td class="align-middle">@videogioco.Descrizione</td>
                    <td class="align-middle">&euro;@videogioco.Prezzo</td>
                    <td class="align-middle text-center">@videogioco.Disponibilità</td>
                    <td class="align-middle text-center">
                       <a class="btn btn-sm" href="@Url.Action("Dettagli", "Admin", new{id = videogioco.Id})">
                            <button width="24" height="24" viewBox="0 0 24 24" class="icone-admin"></button>
                        <br>
                        <a class="btn btn-sm" href="@Url.Action("Aggiorna", "Admin", new{id = videogioco.Id})">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-activity"><polygon points="14 2 18 6 7 17 3 17 3 13 14 2"></polygon><line x1="3" y1="22" x2="21" y2="22"></line></svg>
                        </a>
                        <form action="@Url.Action("Elimina", "Admin", new{id = videogioco.Id})" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-activity"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>
                            </button>
                        </form>
                    </td>
                </tr>
            </div>
        }
        </tbody>
    </table>
</div>