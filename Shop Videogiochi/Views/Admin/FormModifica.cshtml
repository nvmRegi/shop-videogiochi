<div class="form-body body_form" id="formCrea">
        <div class="row">
        <div class="form-holder">
            <div class="form-content">
                <div class="form-items">
                    <h3>Modifica un gioco</h3>
                    
                    <form asp-controller="Admin" asp-action="Aggiorna" asp-route-id="@Model.videogioco.Id" method="post">
                        @Html.AntiForgeryToken()

                        <div class="col-md-12">
                           <input asp-for="videogioco.Nome" placeholder="Nome del gioco">
                           <span asp-validation-for="videogioco.Nome" class="text-danger"></span>
                        </div>

                        <div class="col-md-12">
                            <input asp-for="videogioco.Foto" placeholder="Immagine del gioco">
                            <span asp-validation-for="videogioco.Foto" class="text-danger"></span>
                        </div>

                       <div class="col-md-12">
                            <select asp-for="videogioco.CategoriaId" class="form-select mt-3">
                                  <option selected disabled value="">Categoria videogioco</option>
                                @foreach(Categoria categoria in Model.categoria)
                                {
                                    <option value="@categoria.Id">@categoria.Tema</option>
                                }
                           </select>
                           <span asp-validation-for="videogioco.Categoria" class="text-danger"></span>
                       </div>

                       <div class="col-md-12">
                          <textarea asp-for="videogioco.Descrizione" placeholder="Descrizione"></textarea>
                          <span asp-validation-for="videogioco.Descrizione" class="text-danger"></span>
                       </div>

                       <div class="col-md-12">
                          <input asp-for="videogioco.Prezzo" placeholder="Prezzo">
                          <span asp-validation-for="videogioco.Prezzo" class="text-danger"></span>
                       </div>
              
                       <div class="mt-3">
                           <input type="submit" class="btn btn-primary" value="Aggiorna">
                       </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

