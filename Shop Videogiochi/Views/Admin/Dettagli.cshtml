@model Videogioco


<div class="container">
    <div class="row mt-5">
        <div class="col-4 mx-auto">
            <div class="card box-shadow bg-body mt-5">
                <img src="@Model.Foto" class="card-img-top h-100" alt="@Model.Nome" class="card-img-top">
                <div class="card-body fs-6 p-0">
                    <h4 class="text-center my-3">@Model.Nome</h4>
                        <p class="mx-1"><strong>Descrizione:</strong></p>
                        <p class="mx-1">@Model.Descrizione</p>
                        <p class="mx-1">Key Disponibili: </p>
                <div class="card-footer">
                    <p class="text-center">€ @Model.Prezzo</p>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>
