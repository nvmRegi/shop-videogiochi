@model VideogiocoCategoria

<div class="container" style="padding-top: 65px">
    <div class="d-flex align-items-center">
        <h1 class="mt-3 mb-3">Nuovo videogioco</h1>
    </div>

    <form action="@Url.Action("Crea", "Admin")" method="post">
        @Html.AntiForgeryToken()

        <!-- Titolo -->
        <div class="form-outline">
            <label class="form-label" for="Nome">Titolo</label>
            <input asp-for="videogioco.Nome" type="text" class="form-control" />
            <span asp-validation-for="videogioco.Nome" class="text-danger"></span>

        </div>

        <!-- Categoria -->
        <div class="form-outline mb-3">
             <label class="form-label" for="Categoria">Categoria</label>
            <select asp-for="videogioco.Categoria" class="form-select" aria-label="Default select example">
                <option selected>Seleziona una categoria</option>
                @foreach(Categoria category in Model.categoria)
                {
                    <option value="@category.Id">@category.Tema</option>
                }
            </select>
        </div>
    
        <!-- Foto -->
        <div class="form-outline">
            <label class="form-label" for="Foto">Copertina videogioco</label>
            <input asp-for="videogioco.Foto" type="url" class="form-control" />
            <span asp-validation-for="videogioco.Foto" class="text-danger"></span>
        </div>
    
        <!-- Descrizione -->
        <div class="form-outline mb-4">
            <label class="form-label" for="Descrizione">Descrizione</label>
            <textarea asp-for="videogioco.Descrizione" rows="10" class="form-control"></textarea>
            <span asp-validation-for="videogioco.Descrizione" class="text-danger"></span>
        </div>

        <!-- Prezzo -->
        <div class="form-outline mb-4">
            <label class="form-label" for="">Prezzo</label>
            <input asp-for="videogioco.Prezzo" type="number" min="0" max="10000" step="1" class="form-control" />
            <span asp-validation-for="videogioco.Prezzo" class="text-danger"></span>
        </div>

        <!-- Disponibilità -->
        <div class="form-outline mb-4">
        <label class="form-label" for="Descrizione">Disponibilità</label>
        <input asp-for="videogioco.Disponibilità" type="number" class="form-control" />
        <span asp-validation-for="videogioco.Disponibilità" class="text-danger"></span>
        </div>

        <!-- Submit button -->
        <button type="submit" class="btn btn-primary btn-block mb-4">Crea nuovo videogioco</button>
    </form>
</div>