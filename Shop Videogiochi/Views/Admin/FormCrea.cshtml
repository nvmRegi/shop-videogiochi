 @model VideogiocoCategoria

    <div class="container">
    <form class="form-horizontal" action="@Url.Action("Crea", "Videogioco")" method="post">
                @Html.AntiForgeryToken()">
        <div class="form-group py-3">
          <label class="control-label col-sm-2" for="email">Nome Videogioco</label>
          <div class="col-sm-8">
            <input type="email" class="form-control" id="email" placeholder="Aggiungi nome videogioco">
          </div>
        </div>
        
        <div class="form-group py-3">
          <label class="control-label col-sm-2" for="pwd">Foto videogioco</label>
          <div class="col-sm-8">
            <input type="password" class="form-control" id="pwd" placeholder="Aggiungi foto videogioco">
          </div>
        </div>
        <div class="form-group py-3">
            <label class="control-label col-sm-4" for="email">Descrizione Videogioco</label>
            <div class="col-sm-8">
              <input type="email" class="form-control" id="email" placeholder="Aggiungi descrizione videogioco">
            </div>
          </div>
          <div class="form-group py-3">
            <label class="control-label col-sm-2" for="email">Prezzo Videogioco</label>
            <div class="col-sm-8">
              <input type="email" class="form-control" id="email" placeholder="Aggiungi prezzo videogioco">
            </div>
          </div>
          <div class="form-group py-3">
            <label class="control-label col-sm-2" for="email">Disponibilità</label>
            <div class="col-sm-8">
              <input type="email" class="form-control" id="email" >
            </div>
          </div>
          <div class="input-group py-3 mb-3">
            
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">Categorie</button>
            <ul class="dropdown-menu dropdown-menu-end">
              <li><a class="dropdown-item" href="#">uno</a></li>
              <li><a class="dropdown-item" href="#">due</a></li>
              <li><a class="dropdown-item" href="#">tre</a></li>
              <li><a class="dropdown-item" href="#">quattro</a></li>
            </ul>
        </div> 
        
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
      </form> 
      
    </div>
    
